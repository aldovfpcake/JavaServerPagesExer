<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>ListadoPersonas</servlet-name>
        <servlet-class>mx.com.gm.web.ListadoPersonas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AgregarPersona</servlet-name>
        <servlet-class>mx.com.gm.web.AgregarPersona</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListadoPersonas</servlet-name>
        <url-pattern>/ListadoPersonas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AgregarPersona</servlet-name>
        <url-pattern>/AgregarPersona</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
